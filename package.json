{
  "name": "react-env-setup",
  "version": "1.2.0",
  "description": "This is a blueprint for React application.",
  "author": "Stanislav Spuzyak",
  "license": "ISC",
  "scripts": {
    "lint": "eslint src/scripts/** --ext .tsx,.ts --color",
    "lint:report": "eslint src/scripts/** --ext .tsx,.ts --color --format=json -o ./reports/eslint.json",
    "lint:test": "eslint src/scripts/**/*.spec* --ext .ts --color",
    "commit": "git-cz",
    "git:commit": "git add . && git commit -m \"build: bump up to a new version\"",
    "git:push": "git push origin && git push origin --tags",
    "changelog": "conventional-changelog -p eslint -i reports/CHANGELOG.md -s -r 0",
    "prestart": "npm run lint",
    "start": "cross-env NODE_ENV=development webpack-dev-server --open --config webpack.dev.js",
    "test": "cross-env NODE_ENV=test npm run lint:test && jest --color",
    "tdd": "cross-env NODE_ENV=test npm run lint:test && jest --color --watchAll",
    "snapshot-update": "jest -u --color",
    "todo": "leasot --exit-nicely src/scripts/**/*.ts src/scripts/**/*.tsx",
    "todo-cli": "leasot --exit-nicely --reporter markdown src/scripts/**/*.ts src/scripts/**/*.tsx > reports/TODO.md",
    "prebuild": "npm run lint:report && npm test",
    "build": "webpack --config webpack.prod.js",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch",
    "postversion": "npm run changelog && git:commit && npm run git:push",
    "report:bundle": "cross-env REPORT_TYPE=bundle node tools/open-report.js"
  },
  "keywords": [
    "React",
    "Redux",
    "Jest",
    "Webpack",
    "Husky",
    "Commitizen"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@types/redux-mock-store": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "url-loader": "^4.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-regenerator": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-angular": "^9.0.1",
    "@testing-library/react": "^10.4.3",
    "@types/jest": "^26.0.3",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/redux-logger": "^3.0.8",
    "autoprefixer": "^9.8.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-cli": "^2.0.34",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-testing-library": "^3.3.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "leasot": "^11.0.0",
    "opn": "^6.0.0",
    "redux-mock-store": "^1.5.4",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
